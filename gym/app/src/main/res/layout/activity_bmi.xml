<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bmi_calculator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/height"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etHeight"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:hint="@string/cm"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:backgroundTint="#CCCCCC" />
        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weight"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:hint="@string/kg"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:backgroundTint="#CCCCCC" />
        </LinearLayout>

        <!-- Age -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/age"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:hint="@string/years_old"
                android:inputType="number"
                android:textColor="#000000"
                android:backgroundTint="#CCCCCC" />
        </LinearLayout>

        <!-- Gender -->
        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:textColor="#000000"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:textColor="#000000"
                android:layout_marginStart="24dp" />
        </RadioGroup>

        <!-- Button -->
        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/calculate_bmi"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- BMI Result -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bmi_result_label"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvBMICategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#4CAF50"
            android:textSize="18sp" />

        <!-- BMI Category Guide -->
        <LinearLayout
            android:id="@+id/bmiCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="#4CAF50"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvBmiCategoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmi_PhanLoai"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBmiCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmi_categories_text"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
